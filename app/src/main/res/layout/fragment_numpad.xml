<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingRight="70dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/numEntered"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right"
            android:text="Kč 0.00"
            android:textSize="70sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/numPad1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="1"
            android:textSize="70sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPad2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="2"
            android:textSize="70sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPad3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="3"
            android:textSize="70sp"
            android:layout_weight="1"/>
        </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/numPad4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="4"
            android:textSize="70sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPad5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="5"
            android:textSize="70sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPad6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="6"
            android:textSize="70sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/numPad7"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="7"
            android:textSize="70sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPad8"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="8"
            android:textSize="70sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPad9"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="9"
            android:textSize="70sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/numPadClear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="clear"
            android:textAllCaps="true"
            android:textSize="35sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPad0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="0"
            android:textSize="70sp"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/numPadPlus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="+"
            android:textSize="70sp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>